# Environment Variables

# Editors
export EDITOR="nvim"

#directories
export DEV="$HOME/Devops"
export REPOS="$HOME/Devops/Repos"
export PI="$HOME/DevOps/Repos/github/pi-cluster"
export BLOG="$HOME/DevOps/Repos/github/blog"
export HOMELAB="$HOME/DevOps/Repos/github/homelab"
export GITHUB="$HOME/Devops/Repos/github"
export SECONDBRAIN="$HOME/Obsidian/second-brain"
export CLONE="$HOME/DevOps/Repos/clone"

#XDG
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}

#kubectl completion
alias k="kubectl"
complete -o default -F __start_kubectl k
source <(kubectl completion bash)

# Source .bashrc if it exists
if [ -f "$HOME/.bashrc" ]; then
  source "$HOME/.bashrc"
fi
